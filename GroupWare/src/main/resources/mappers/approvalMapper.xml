<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.study.groupware.mapper.ApprovalMapper">

	<insert id="create">
		insert into ntc_tb (apv_sq,div_apv_sq,stf_sq,stf_mid_sq,stf_fnl_sq,apv_ok_sq,apv_nm,apv_pl_rt,apv_pl_nm,apv_no)
		values(SEQ_APV.NEXTVAL,#{div_apv_sq},#{stf_sq},#{stf_mid_sq},#{stf_fnl_sq},#{apv_ok_sq},#{apv_nm},#{apv_pl_rt},#{apv_pl_nm},#{apv_no})
	</insert>

	<select id="read" resultType="ApprovalVO">
		select
         ntc_sq,ntc_nm,ntc_dt,stf_nm,ntc_div_nm,ntc_cnt,ntc_div_sq
		from
		ntc_vw
		where ntc_sq = #{ntc_sq}
	</select>
	
	<update id="update">
		update ntc_tb set ntc_nm =#{ntc_nm}, ntc_cnt
		=#{ntc_cnt}
		where ntc_sq = #{ntc_sq}
	</update>

	<delete id="delete">
		delete from ntc_tb where ntc_sq = #{ntc_sq}
	</delete>



	<select id="listAll" resultType="com.study.groupware.vo.ApprovalVO">
 <![CDATA[

select apv_sq,apv_nm,stf_nm,div_apv_nm,apv_ok
   
   from 
   apv_vw
   where div_apv_sq =#{div_apv_sq}

  
 ]]>
	</select>


</mapper>
